<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Consultas</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>
<body>
    <h3 style="text-align: center;">Consultas</h3>
    <hr>

    <form action="/" method="POST" class="form-inline" >
        <div class="form-group mx-sm-3 mb-2"   ></div>
            <input type="search" name="search" id="search" class="form-control"; placeholder="Email ou CPF">
        </div>
        <div  style="padding: 20px;">
        <button class="btn btn-primary mb-2">Pesquisar</button>
        </div>
    </form>
    <hr>
    <form action="/" method="GET">
        <button  class="btn btn-danger btn-lg ">Voltar</button>
    </form>
    <hr>
    <% appos.forEach(appo => { %>
    <div style = "padding-top: 5px;" class="container-sm">
    <div class="card" style="width: 25rem; ">
        <div class="card-header">
            <h5 class="card-title">Consulta: <%= appo.description %></h5>
          </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item">Paciente: <%= appo.name %></li>
            <li class="list-group-item">Email: <%= appo.email %></li>
            <li class="list-group-item">CPF: <%= appo.cpf %></li>
            <% if(appo.finished == true) {%>
                <li class="list-group-item" style="color: red; font-weight: bold">Consulta Finalizada!</li>
            <% }%>
          </ul>
          <% if(appo.finished == false) {%>
          <div class="card-body">
                <form action="/finish" method="post" style="padding-bottom: 5px;" >
                    <input type="hidden" name="id" value="<%= appo._id%>">
                    <button class="btn btn-primary btn-lg btn-block">Finalizar consulta</button>
                </form>
            <% }%>
          </div>
    </div>
    </div>
    <% }) %>
</body>
</html>